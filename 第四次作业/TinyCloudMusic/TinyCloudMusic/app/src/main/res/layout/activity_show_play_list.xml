<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.evide.tinycloudmusic.ShowPlayList">
    <ListView
        android:id="@+id/lvShowList"
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="1"></ListView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <ImageButton
            android:layout_marginTop="5dp"
            android:layout_marginHorizontal="10dp"
            android:onClick="playThisList"
            android:background="@mipmap/play_list"
            android:layout_width="50dp"
            android:layout_height="50dp" />
        <ImageButton
            android:layout_marginTop="5dp"
            android:layout_marginHorizontal="10dp"
            android:background="@mipmap/edit_list"
            android:layout_width="50dp"
            android:layout_height="50dp" />
        <ImageButton
            android:onClick="delThisList"
            android:layout_marginTop="5dp"
            android:layout_marginHorizontal="10dp"
            android:background="@mipmap/del_list"
            android:layout_width="50dp"
            android:layout_height="50dp" />
    </LinearLayout>

</LinearLayout>
